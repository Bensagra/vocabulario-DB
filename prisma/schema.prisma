datasource db {
  provider = "postgresql"  // o "mysql" / "sqlite" según tu elección
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Word {
  id          Int               @id @default(autoincrement())
  word        String            @unique
  type        WordType
  definition  String
  apiSynonyms ApiSynonym[]      @relation("ApiSynonyms")
  assocSynonyms AssociatedSynonym[] @relation("AssociatedSynonyms")
  createdAt   DateTime          @default(now())
}

model ApiSynonym {
  id          Int     @id @default(autoincrement())
  word        String
  wordRef     Word    @relation("ApiSynonyms", fields: [wordRefId], references: [id])
  wordRefId   Int
}

model AssociatedSynonym {
  id          Int     @id @default(autoincrement())
  word        String
  wordRef     Word    @relation("AssociatedSynonyms", fields: [wordRefId], references: [id])
  wordRefId   Int
}

enum WordType {
  noun
  verb
  adjective
  adverb
  pronoun
  preposition
  conjunction
  interjection
  determiner
  other
}