datasource db {
  provider = "postgresql"  // o "mysql" / "sqlite" según tu elección
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Word {
  id          Int        @id @default(autoincrement())
  word        String     @unique
  type        WordType
  definition  String
  synonyms    Synonym[]  @relation("WordSynonyms")
  createdAt   DateTime   @default(now())
}

model Synonym {
  id          Int     @id @default(autoincrement())
  word        String
  wordRef     Word    @relation("WordSynonyms", fields: [wordRefId], references: [id])
  wordRefId   Int
}

enum WordType {
  noun
  verb
  adjective
  adverb
  pronoun
  preposition
  conjunction
  interjection
  determiner
  other
}